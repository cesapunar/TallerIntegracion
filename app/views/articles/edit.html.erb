<h1 class="center"> Editar noticia </h1>

<%= form_for(@article) do |f| %>
	<div class=container>
		<% @article.errors.full_messages.each do |message| %>
			<div class=be-red>
				<%= message %>
			</div>
		<% end %>
		<div class="form-group">	
		    <label for="formGroupExampleInput">Título</label>
			<%= f.text_field :title, placeholder: "Título", class: "form-control" %> 	
		</div>	
		<div class="form-group">	
		    <label for="formGroupExampleInput">Bajada</label>
			<%= f.text_area :down, placeholder: "Escriba la bajada de la noticia.", class: "form-control" %> 	
		</div>	
		<div class="form-group">	
		    <label for="formGroupExampleInput">Cuerpo</label>
			<%= f.text_area :body, placeholder: "Escriba el cuerpo de la noticia", class: "form-control" %> 	
		</div>	
		<div class="form-group center">	
			<%= f.submit "Editar", class:"btn-success btn-lg" %> 	
		</div>	
	</div>
<% end %>

