<div>
	<section>
		<div class="container article">
			<h1 class="title"> <%= @article.title %> </h1>	
			<div class="down">
				<%= @article.down %>
			</div>
			<div class="body">
				<%= @article.body %>
			</div>
			<div class="body">
				<label> Fecha de creaci√≥n: </label>
				<%= @article.created_at %>
			</div>
		</div>
	</section>

	<section>
		<h3> Comentarios </h3>
		<div class=container>
			<div class="container">
				<% @comments.each do |comment| %>
					<div class=row>	
						<div class="col-lg-10 article">
							<h1 class="comment"> <label>Nombre: </label> <%= comment.name %> </h1>	
							<div class="body">
								<label>Comentario: </label>
								<%= comment.body %>
							</div>
						</div>
					</div>
				<% end %>
			</div>
	</section>
	<section>
		<h3> Ingresa un comentario </h3>
		<%= form_for :comment, :url => comments_create_path do |f| %>
			<div class="container article">
				<div class="form-group subtitle">
				    <label for="formGroupExampleInput">Nombre</label>	
					<%= f.text_field :name, placeholder: "Ingrese nombre.", class: "form-control" %> 	
				</div>	
				<div class="form-group subtitle" class="center">	
				    <label for="formGroupExampleInput">Comentario</label>
					<%= f.text_area :body, placeholder: "Escriba el comentario.", class: "form-control" %> 	
				</div>	

				<%= f.hidden_field :article_id, :value => @article.id %>

				<div class="form-group center">	
					<%= f.submit "Publicar comentario", class:"btn-success btn-lg" %> 	
				</div>	
			</div>
		<% end %>
		</div>
	</section>
</div>