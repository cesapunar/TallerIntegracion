<div class=container>
	<% @articles.each do |article| %>
		<div class="row solid">	
			<div class="col-lg-10 article">
				<h1 class="title"> <%= article.title %> </h1>	
				<div class="down">
					<%= article.down %>
				</div>
				<div class="body">
					<%= article.body_truncated %>
				</div>
				<div class="body">
					<label> Fecha de creaci√≥n: </label>
					<%= article.created_at %>
				</div>
				<div class="body">
					<label> Cantidad de comentarios: </label>
					<%= article.comments_count %>
				</div>
			</div>
			<div class="col-lg-2 function">
				<button class="btn-new btn-success btn-lg"> <%= link_to "Ver Noticia", article_path(id:article.id)  %> </button>
			</div>
		</div>
	<% end %>
</div>
